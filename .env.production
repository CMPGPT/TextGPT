# Vercel Optimized Production Environment Settings

# Enable database logging for debugging
ENABLE_DB_LOGGING=true

# Debug API Key - set this in Vercel environment variables
# DEBUG_API_KEY=

# Base URLs for QR code generation
NEXT_PUBLIC_BASE_URL=https://textg.pt
NEXT_PUBLIC_SITE_URL=https://textg.pt
NEXT_PUBLIC_APP_URL=https://textg.pt

# PDF Processing Limits
MAX_PDF_SIZE_MB=5
MAX_BATCH_SIZE=2

# Memory optimization
NODE_OPTIONS="--max-old-space-size=1024"

# Stripe Configuration
# Important: Actual secret keys should be set in Vercel environment variables, not in this file
# STRIPE_SECRET_KEY=sk_xxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_xxx
# Webhook secret for signature verification (set in Vercel dashboard)
